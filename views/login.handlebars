<div class='row'>
    <div class='col-md-6 p-3 custom-container mx-auto'>
        <h2 class='title-text'>Login</h2>

        <form class='form login-form'>
            <div class='form-group'>
                <label class='sub-text' for='email-login'>Email: </label>
                <br>
                <input class='form-input' type='text' id='email-login' placeholder='Enter a valid email address...' />
            </div>

            <div class='form-group'>
                <label class='sub-text' for='pass-login'>Password: </label>
                <br>
                <input class='form-input' type='password' id='pass-login' placeholder='Enter your password...' />
            </div>

            <div class='form-group'>
                <button class='btn login-btn' type='submit'>Login</button>
            </div>
        </form>

        <h6 class='content-text'>No account? No problem!
        <br>
        <br>
            <a id='signupLink' href='/signup'>Signup here</a>
        </h6>
    </div>
</div>

<script src='/js/login.js'></script>