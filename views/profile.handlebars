<div class='custom-container'>
    <div class='row'>
        <div class='col-md-8 mx-auto p-3'>
            <h2 class='title-text center'>Welcome back, {{name}}!</h2>
        </div>
    </div>

    <div class='row'>
        <div class='col-md-8 mx-auto p-3'>
            <h3 class='title-text'>Author a new post: </h3>

            <form class='form new-blog-form'>
                <div class='form-group'>
                    <div class='form-group'>
                        <label class='sub-text' for='post-title'>Title: </label>
                        <br>
                        <input class='form-input' type='text' id='post-title' name='post-title' placeholder='Enter your title here...' />
                    </div>

                    <div class='form-group'>
                        <label class='sub-text' for='post-body'>Post: </label>
                        <br>
                        <textarea class='form-input' id='post-body' name='post-body' placeholder='Enter your post here...'></textarea>
                    </div>

                    <div class='form-group'>
                        <button type='submit' class='btn login-btn'>Submit Post</button>
                    </div>
                </div>
            </form>
        </div>


        {{#if posts.length}}
        <div class='col-md-8 mx-auto p-3 post-list'>
            <h3 class='title-text'>Previous posts: </h3>

            {{#each posts as |post|}}
            <div class='row mb-3'>
                <div class='col-md-8'>
                    <h4><a href='/posts/{{post.id}}'>{{post.name}}</a></h4>
                </div>
                <div class='col-md-4 mx-auto' id='delete-post'>
                    <button class='btn btn-sm logout-btn' id='delete-btn' data-id='{{post.id}}'>Delete</button>
                </div>
            </div>
            {{/each}}
        </div>
        {{/if}}

    </div>
</div>

<script src='/js/profile.js'></script>