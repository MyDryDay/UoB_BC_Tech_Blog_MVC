<div class='row'>
    <div class='col-md-6 text-white p-3 signup-container mx-auto'>
        
        <h3 class='signup-header'>Edit a post: </h3>
        <form class='form edit-form'>
            <div class='form-group'>
                <label class='input-title' for='edit-title'>New Title: </label>
                <br>
                <input class='form-input' type='text' id='edit-title' name='edit-title' value='{{edit.name}}' />
            </div>

            <div class='form-group'>
                <label class='input-title' for='edit-body'>New Post: </label>
                <br>
                <textarea class='form-input' type='text' id='edit-body' name='edit-body' value='{{edit.description}}'>{{edit.description}}</textarea>
            </div>

            <div class='form-group'>
                <button type='submit' class='btn btn-primary' id='submit-edit'>Submit Update</button>
            </div>
        </form>
    </div>
</div>

<script src='/js/edit.js'></script>