{{#each posts as |post|}}

<div class='row'>
    <div class='col-md-8 p-4 post-container mb-4 mx-auto'>
        <h2>
            <a class='title-text' href='/posts/{{post.id}}'>{{post.name}}</a>
        </h2>

        <p class='author-text'>published by {{post.user.name}} on {{format_date post.date_created}}</p>
        <p id='home-blog-txt' class='post-text'>
            {{post.description}}
        </p>
    </div>
</div>

{{/each}}