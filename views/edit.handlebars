<div class='row mt-4'>
    <div class='col-md-4 text-white p-3'>
        <h3>Edit a post: </h3>
        <form class='form edit-form'>
            <div class='form-group'>
                <label for='edit-title'>New Title: </label>
                <br>
                <input class='form-input' type='text' id='edit-title' name='edit-title' value='{{edit.name}}' />
            </div>

            <div class='form-group'>
                <label for='edit-body'>New Post: </label>
                <br>
                <input class='form-input' type='text' id='edit-body' name='edit-body' value='{{edit.description}}' />
            </div>

            <div class='form-group'>
                <button type='submit' class='btn btn-primary' id='submit-edit'>Submit Update</button>
            </div>
        </form>
    </div>
</div>

<script src='/js/edit.js'></script>